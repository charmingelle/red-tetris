  "main": "index.js",
  "scripts": {
    "test": "cd src/client && npm run test",
    "test:cover": "cd src/client && npm run test:cover",
    "init:server": "cd src/server && npm i",
    "init:client": "cd src/client && npm i",
    "init": "npm i && npm run init:server && npm run init:client",
    "build": "cd src/client && npm run build",
    "clean:server": "cd src/server && rm -rf node_modules",
    "clean:client": "cd src/client && rm -rf node_modules",
    "clean": "rm -rf node_modules && npm run clean:server && npm run clean:client",
    "start": "cd src/server && npm run start",
    "start:dev": "concurrently 'cd src/server && npm run start:dev' 'cd src/client && npm run start'"
  },
